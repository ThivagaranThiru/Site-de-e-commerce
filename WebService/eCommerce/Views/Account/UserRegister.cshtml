@model Users

@{
    ViewData["Title"] = "UserRegister";
}
<!--================ End Header Menu Area =================-->
<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="category">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <h1>Register</h1>
            </div>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
<!--================Login Box Area =================-->
<section class="login_box_area section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <div class="hover">
                        <h4>Already have an account?</h4>
                        <p>There are advances being made in science and technology everyday, and a good example of this is the</p>
                        <a class="button button-account" asp-area="" asp-controller="Account" asp-action="Login">Login Now</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner register_form_inner">
                    <h3>Create an account</h3>
                    <form class="row login_form" method="post" id="register_form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <select asp-for="Civilite">
                                <option value="">Please Choose</option>
                                <option value="Monsieur">Monsieur</option>
                                <option value="Madame">Madame</option>
                            </select>
                            <span asp-validation-for="Civilite" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="FirstName" type="text" class="form-control" id="firstname" name="firstname" placeholder="Firstname" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Firstname'">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Name" type="text" class="form-control" id="name" name="name" placeholder="Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Name'">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <input asp-for="DateOfBirth" value="2018-07-22" type="date" class="form-control" id="dateofbirth" name="dateofbirth" placeholder="DateOfBirth" onfocus="this.placeholder = ''" onblur="this.placeholder = 'DateOfBirth'">
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <select asp-for="RoleId" asp-items="@Model.role">
                                <option value="">Please Choose</option>
                            </select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="UserName" type="text" required="required" class="form-control" id="username" name="username" placeholder="Username" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Email" type="email" required="required" class="form-control" id="email" name="email" placeholder="Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Password" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters" required="required" class="form-control" id="password"  name="password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <!-- div class="col-md-12 form-group">
        <input asp-for="OldPassword" type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'">
        <span asp-validation-for="Civilite" class="text-danger"></span>
    </div>
    <divclass="col-md-12 form-group">
        <div class="creat_account">
            <input type="checkbox" id="f-option2" name="selector">
            <label for="f-option2">Keep me logged in</label>
        </div>
    </div-->
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="button button-register w-100">Suivant</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->