@model UserProfil

@{
    ViewData["Title"] = "MyProfil";
}
<!--================ End Header Menu Area =================-->
<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="category">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <h1>Edit My Profile</h1>
            </div>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
<!--================Login Box Area =================-->
<section class="login_box_area">
    <div class="container h-100">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_form_inner register_form_inner">
                    <form class="row login_form" method="post" id="register_form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <select asp-for="Civilite">
                                <option selected="selected" value="@Model.Civilite">@Model.Civilite</option>
                                <option value="Monsieur">Monsieur</option>
                                <option value="Madame">Madame</option>
                            </select>
                            <span asp-validation-for="Civilite" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="FirstName" type="text" class="form-control" id="firstname" name="firstname" value="@Model.FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Name" type="text" class="form-control" id="name" name="name" value="@Model.Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="DateOfBirth" type="date" class="form-control" id="dateofbirth" name="dateofbirth">
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="UserName" type="text" required="required" class="form-control" id="username" name="username" value="@Model.UserName">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Email" type="email" required="required" class="form-control" id="email" name="email" value="@Model.Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <!--div class="col-md-12 form-group">
            <input asp-for="Password" type="password" class="form-control" id="password" name="password" value="" disabled="disabled">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div-->
                        <!-- div class="col-md-12 form-group">
            <input asp-for="OldPassword" type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'">
            <span asp-validation-for="Civilite" class="text-danger"></span>
        </div>
        <divclass="col-md-12 form-group">
            <div class="creat_account">
                <input type="checkbox" id="f-option2" name="selector">
                <label for="f-option2">Keep me logged in</label>
            </div>
        </div-->
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="button button-register w-100">Edit My Profil</button>
                        </div>
                    </form>
                      <a asp-route-id="@Model.Id" asp-action="DeleteMe" asp-controller="Account" class="genric-btn danger-border">Delete Me</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->