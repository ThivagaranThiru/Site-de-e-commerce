@model ProduitCategoriecs

@{
    ViewData["Title"] = "ProduitList";
}
<!-- slider Area Start-->
<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="single-slider slider-height2 d-flex align-items-center" data-background="img/hero/category.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Products</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider Area End-->
<!-- product list part start-->
<section class="product_list section_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="product_sidebar">
                    <div class="single_sedebar">
                        <div class="select_option">
                            <div class="select_option_list">Category <i class="right fas fa-caret-down"></i> </div>
                            <div class="select_option_dropdown">
                                @foreach (var categorie in Model.categories)
                                {
                                    <p><a asp-route-pageNumber=1 asp-route-currentFilter="@categorie.Name" asp-action="Index" asp-controller="Produit">@categorie.Name</a></p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="product_list">
                    <div class="row">
                        @foreach (var produit in Model.produits)
                        {
                        <div class="col-lg-6 col-sm-6">
                            <div class="single_product_item">
                                <img src="@produit.ImageUrl"  alt="" class="img-fluid">
                                <h3>
                                    <a asp-route-id="@produit.Id" asp-action="Detail" asp-controller="Produit">
                                        @produit.Name
                                    </a>
                                </h3>
                                <p>@produit.Prix €</p>
                            </div>
                        </div>
                        }
                    </div>
                    <div class="load_more_btn text-center">
                        @{
                            var prevDisabled = !Model.produits.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.produits.HasNextPage ? "disabled" : "";
                        }
                        <a asp-action="Index"                          
                           asp-route-pageNumber="@(Model.produits.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-controller="Produit"
                           class="btn btn-default @prevDisabled">
                            Previous
                        </a>
                        <a asp-action="Index"
                           asp-controller="Produit"
                           asp-route-pageNumber="@(Model.produits.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="btn btn-default @nextDisabled">
                            Next
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product list part end-->
